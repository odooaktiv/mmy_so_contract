<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form view for Sale oder reject wizard -->
        <record id="view_sale_order_reject_wizard_form" model="ir.ui.view">
            <field name="name">sale.order.reject.wizard.form</field>
            <field name="model">sale.order.reject.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="reject_reason"/>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" class="oe_highlight"
                                name="action_confirm"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>